<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>LifeLine + | Admin Login</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <link href="/css/admin-style.css" rel="stylesheet">
    <style>
        /* Premium Login Page Styles */
        .admin-login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(#072545);
            position: relative;
            overflow: hidden;
            padding: 2rem;
        }

        /* Animated Background Elements */
        .bg-animated-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            filter: blur(60px);
            opacity: 0.15;
            animation: float 20s infinite ease-in-out;
        }





        /* Premium Login Card */
        .premium-login-card {
            position: relative;
            z-index: 10;
            background: #fffffffa;
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 2rem 2.5rem;
            width: 90%;
            max-width: 400px;
            box-shadow:
                0 20px 60px rgba(0, 0, 0, 0.3),
                0 0 0 1px rgba(255, 255, 255, 0.1) inset;
            animation: slideUp 0.6s ease-out;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Brand Section */
        .login-brand {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .brand-icon-wrapper {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #223a66, #4867a0);
            border-radius: 16px;
            margin-bottom: 1rem;
            box-shadow: 0 10px 30px rgba(34, 58, 102, 0.3);
            animation: pulse 2s infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                transform: scale(1);
                box-shadow: 0 10px 30px rgba(34, 58, 102, 0.3);
            }

            50% {
                transform: scale(1.05);
                box-shadow: 0 15px 40px rgba(34, 58, 102, 0.4);
            }
        }

        .brand-icon-wrapper i {
            font-size: 1.75rem;
            color: white;
        }

        .login-title {
            font-size: 1.5rem;
            font-weight: 800;
            color: #1a2d52;
            margin-bottom: 0.25rem;
            letter-spacing: -0.02em;
        }

        .login-subtitle {
            font-size: 0.85rem;
            color: #6b7280;
            font-weight: 500;
        }

        /* Error Alert */
        .error-alert-premium {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            border: 1px solid #fca5a5;
            border-radius: 12px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            animation: shake 0.5s;
        }

        @keyframes shake {

            0%,
            100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-10px);
            }

            75% {
                transform: translateX(10px);
            }
        }

        .error-alert-premium i {
            color: #dc2626;
            font-size: 1.25rem;
        }

        .error-alert-premium span {
            color: #991b1b;
            font-weight: 600;
            font-size: 0.9rem;
        }

        /* Form Styling */
        .premium-form {
            margin-top: 1.5rem;
        }

        .form-group-premium {
            margin-bottom: 1.25rem;
        }

        .form-label-premium {
            display: block;
            font-size: 0.8rem;
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.4rem;
        }

        .input-container-premium {
            position: relative;
        }

        .input-icon-premium {
            position: absolute;
            left: 1.25rem;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            z-index: 2;
        }

        .input-premium {
            width: 100%;
            padding: 1rem 1rem 1rem 3.5rem;
            font-size: 1rem;
            font-weight: 500;
            color: #1f2937;
            background: #f9fafb;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            transition: all 0.3s ease;
            outline: none;
        }

        .input-premium:focus {
            background: white;
            border-color: #223a66;
            box-shadow: 0 0 0 4px rgba(34, 58, 102, 0.1);
        }

        .input-premium:focus+.input-icon-premium {
            color: #223a66;
        }

        .input-premium::placeholder {
            color: #9ca3af;
            font-weight: 400;
        }

        .password-toggle {
            position: absolute;
            right: 1.25rem;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 2;
            background: none;
            border: none;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .password-toggle:hover {
            color: #223a66;
        }

        /* Submit Button */
        .btn-login-premium {
            width: 100%;
            padding: 0.875rem 1.5rem;
            font-size: 0.95rem;
            font-weight: 700;
            color: white;
            background: linear-gradient(135deg, #223a66, #4867a0);
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(34, 58, 102, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            margin-top: 1.5rem;
        }

        .btn-login-premium:hover {
            background: linear-gradient(135deg, #1a2d52, #223a66);
            box-shadow: 0 6px 25px rgba(34, 58, 102, 0.4);
            transform: translateY(-2px);
        }

        .btn-login-premium:active {
            transform: translateY(0);
        }

        .btn-login-premium i {
            transition: transform 0.3s ease;
        }

        .btn-login-premium:hover i {
            transform: translateX(4px);
        }

        /* Back Link */
        .back-link-premium {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 1.5rem;
            padding: 0.6rem 1.25rem;
            font-size: 0.85rem;
            font-weight: 600;
            color: #6b7280;
            background: #f3f4f6;
            border-radius: 10px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .back-link-premium:hover {
            background: #e5e7eb;
            color: #223a66;
            transform: translateX(-4px);
        }

        .back-link-premium i {
            transition: transform 0.3s ease;
        }

        .back-link-premium:hover i {
            transform: translateX(-4px);
        }

        /* Responsive */

        /* Responsive */
        @media (max-width: 640px) {
            .premium-login-card {
                padding: 2.5rem 1.75rem;
            }

            .login-title {
                font-size: 1.75rem;
            }

            .brand-icon-wrapper {
                width: 70px;
                height: 70px;
            }

            .brand-icon-wrapper i {
                font-size: 2rem;
            }
        }
    </style>
</head>

<body>
    <div class="admin-login-container">
        <!-- Animated Background -->
        <div class="bg-animated-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
        </div>

        <!-- Login Card -->
        <div class="premium-login-card">
            <!-- Brand Section -->
            <div class="login-brand">
                <h1 class="login-title">Welcome to LifeLine+</h1>
                <p class="login-subtitle">Secure access to LifeLine+ Admin Portal</p>
            </div>

            <!-- Error Alert -->
            <% if (typeof error !=='undefined' && error) { %>
                <div class="error-alert-premium">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>
                        <%= error %>
                    </span>
                </div>
                <% } %>

                    <!-- Login Form -->
                    <form action="/admin/login" method="POST" class="premium-form">
                        <div class="form-group-premium">
                            <label class="form-label-premium">Email Address</label>
                            <div class="input-container-premium">
                                <input type="email" name="email" class="input-premium" placeholder="admin@lifeline.com"
                                    required autocomplete="email">
                                <i class="fas fa-envelope input-icon-premium"></i>
                            </div>
                        </div>

                        <div class="form-group-premium">
                            <label class="form-label-premium">Password</label>
                            <div class="input-container-premium">
                                <input type="password" name="password" id="passwordInput" class="input-premium"
                                    placeholder="Enter your password" required autocomplete="current-password">
                                <i class="fas fa-lock input-icon-premium"></i>
                                <button type="button" id="togglePassword" class="password-toggle">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <button type="submit" class="btn-login-premium">
                            <span>Sign In to Dashboard</span>
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </form>


                    <!-- Back Link -->
                    <div style="text-align: center;">
                        <a href="/" class="back-link-premium">
                            <i class="fas fa-arrow-left"></i>
                            <span>Back to LifeLine Home</span>
                        </a>
                    </div>
        </div>
    </div>
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const passwordInput = document.querySelector('#passwordInput');

        togglePassword.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);

            // toggle the eye icon
            this.querySelector('i').classList.toggle('fa-eye');
            this.querySelector('i').classList.toggle('fa-eye-slash');
        });
    </script>
</body>

</html>